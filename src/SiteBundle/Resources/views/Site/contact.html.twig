{% extends 'base.html.twig' %}

{% block Message %}Contact {% endblock %}

{% block body %}
    <div class="container" id="contact">
        <section>
            <article>
                <!-- Content Row -->
                <div class="row">
                    <!-- /.col-md-6 -->
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

                        <h1>Contact :</h1>

                        <p>La prise de contact n'implique pas la prise de RDV</p>

                        {{ form_start(form) }}
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        {{ form_widget(form.Nom, {'attr': {'class': 'form-control','placeholder':'Nom'}}) }}
                                        {{ form_errors(form.Nom) }}
                                       
                                    </div>
                                    <div class="form-group">
                                        {{ form_widget(form.Prenom, {'attr': {'class': 'form-control','placeholder':'Prenom'}}) }}
                                        {{ form_errors(form.Prenom) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_widget(form.Email, {'attr': {'class': 'form-control','placeholder':'Email'}}) }}
                                        {{ form_errors(form.Email) }}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        {{ form_widget(form.Message, {'attr': {'class': 'form-control', 'id':'message','placeholder':'Message'}}) }}
                                        {{ form_errors(form.Message) }}
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="col-lg-12 text-center">
                                    <div id="success"></div>
                                    {{ form_widget(form.Envoyer, {'attr': {'class': 'btn btn-xl'}}) }}

                                </div>
                            </div>
                        {{ form_rest(form) }}

                        {# Fermeture de la balise <form> du formulaire HTML #}
                        {{ form_end(form) }}
                    </div> <!-- /.row -->
                </div>
            </article>
        </section>
    </div>
{% endblock %}